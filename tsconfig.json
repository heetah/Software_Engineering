{
  // extends 可選；若無共用設定留空
  "compilerOptions": {
    // 指向編譯後輸出資料夾
    "outDir": "./dist",
    // 擴充 Node.js 模組解析
    "moduleResolution": "node",
    // 目標 JavaScript 版本
    "target": "ES2020",
    // 使用 CommonJS 以便在 Node.js 環境下運作
    "module": "CommonJS",
    // 允許使用 ES Module 的 import/export
    "esModuleInterop": true,
    // 嚴格型別檢查
    "strict": true,
    // 保留原始檔案的對應資訊以方便除錯
    "sourceMap": true,
    // 根目錄：編譯器從這裡開始找原始碼
    "rootDir": "./src"
  },
  // 編譯器要處理的檔案範圍
  "include": ["src"]
}
